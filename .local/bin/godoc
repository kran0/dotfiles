#!/bin/sh

# Godoc is a simple on-screen filter for go doc.
# Go use it for other tool, just create symbolic links.

function execFilter {
    [ -z "${1}" ]    && exec cat
    "${1}" /dev/null && exec "${1}" --
    shift
    execFilter $@
}

function runCommand {
    key="${1//*\//}" # get only last word
    shift

    case "${key}" in
     'godoc' ) go doc $@ ;;
     *       ) echo 'unknown COMMAND' ;;
    esac

}

execFilter more less <<< $(runCommand "${0}" ${@})
